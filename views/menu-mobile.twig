<!-- NOTE
   - PicoCSS does not support hover dropdowns used in previous theme
     (https://github.com/picocss/pico/issues/358)
   - Supports only 2 levels, add more only if absolutely necessary -->
{% if menu %}

  <li>
    <a href="/?s=null">
      <svg viewBox="0 0 512 512" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em"><path fill-rule="evenodd" clip-rule="evenodd" d="M208 48c-88.366 0-160 71.634-160 160s71.634 160 160 160 160-71.634 160-160S296.366 48 208 48zM0 208C0 93.125 93.125 0 208 0s208 93.125 208 208c0 48.741-16.765 93.566-44.843 129.024l133.826 134.018c9.366 9.379 9.355 24.575-.025 33.941-9.379 9.366-24.575 9.355-33.941-.025L337.238 370.987C301.747 399.167 256.839 416 208 416 93.125 416 0 322.875 0 208z"></path></svg>
    </a>
  </li>

	<ul style="background: rgba(0, 0, 0, 0.2);">
	  {% for item in items %}

      {% if item.children %}
        -
        <li class="{{ item.classes | join(' ') }}">
			    <a target="{{ item.target }}" href="{{ item.link }}" class="mobile-menulink"><strong>{{ item.title }}</a></strong></a>
		    </li>


        {% for child in item.children %}
		      <li class="{{ item.classes | join(' ') }}">
			      <a target="{{ child.target }}" href="{{ child.link }}" class="mobile-menulink">{{ child.title }}</a>
		      </li>
	      {% endfor %}
        <br>

      {% else %}

        <li class="{{ item.classes | join(' ') }}">
			    <a target="{{ item.target }}" href="{{ item.link }}" class="mobile-menulink""><strong>{{ item.title }}</strong></a>
		    </li>

      {% endif %}

	  {% endfor %}
	</ul>

{% else %}
  <p>Error in menu.twig: Can't load menu here because one is not set.</p>
{% endif %}
